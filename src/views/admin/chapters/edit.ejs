<div class="max-w-3xl mx-auto px-4 py-8">
  <!-- Quay lại -->
  <a
    href="/admin/stories/<%= chapter.story_id %>"
    class="text-sm text-gray-600 hover:text-blue-600 inline-flex items-center mb-6"
  >
    <i class="fas fa-arrow-left mr-2"></i> Quay lại chi tiết truyện
  </a>

  <!-- Tiêu đề -->
  <h2 class="text-2xl font-bold text-gray-800 mb-6">
    Chỉnh sửa chương: <span class="text-blue-700">"<%= chapter.title %>"</span>
  </h2>

  <!-- Form chỉnh sửa -->
  <form
    method="POST"
    action="/admin/chapters/<%= chapter.id %>/edit"
    class="bg-white p-6 rounded-lg shadow"
  >
    <input type="hidden" name="story_id" value="<%= chapter.story_id %>" />

    <!-- Tiêu đề chương -->
    <div class="mb-4">
      <label class="block text-gray-700 font-medium mb-1">Tiêu đề chương</label>
      <input
        type="text"
        name="title"
        value="<%= chapter.title %>"
        required
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Nhập tiêu đề chương..."
      />
    </div>

    <!-- Nội dung chương -->
    <div class="mb-6">
      <label class="block text-gray-700 font-medium mb-1"
        >Nội dung chương</label
      >
      <textarea
        name="content"
        rows="12"
        required
        class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        placeholder="Nhập nội dung chương..."
      >
<%= chapter.content %></textarea
      >
    </div>

    <!-- Nút cập nhật -->
    <div class="flex justify-between items-center">
      <button
        type="submit"
        class="bg-green-600 hover:bg-green-700 text-white px-5 py-2 rounded-md font-medium shadow"
      >
        <i class="fas fa-save mr-2"></i> Cập nhật chương
      </button>

      <a
        href="/admin/stories/<%= chapter.story_id %>"
        class="text-sm text-gray-500 hover:text-gray-700"
      >
        Hủy bỏ
      </a>
    </div>
  </form>
</div>
