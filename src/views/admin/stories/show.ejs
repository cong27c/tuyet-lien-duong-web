<div class="max-w-4xl mx-auto px-4 py-6">
  <!-- Quay lại -->
  <a
    href="/admin/stories"
    class="inline-flex items-center text-sm text-gray-600 hover:text-blue-600 mb-6"
  >
    <i class="fas fa-arrow-left mr-2"></i> Quay lại danh sách truyện
  </a>

  <!-- Tiêu đề truyện -->
  <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= story.title %></h1>

  <!-- Danh sách chương -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="bg-gray-100 px-4 py-2 font-semibold text-gray-700">
      Danh sách chương (<%= chapters.length %>)
    </div>

    <ul>
      <% chapters.forEach((chapter, index) => { %>
      <li
        class="flex items-center justify-between border-t px-4 py-3 hover:bg-gray-50"
      >
        <div>
          <span class="font-medium text-gray-800"
            >Chương <%= chapter.index_order %>:</span
          >
          <span class="text-gray-700"><%= chapter.title %></span>
        </div>
        <div class="flex gap-2">
          <!-- Nút sửa -->
          <a
            href="/admin/chapters/<%= chapter.id %>/edit"
            class="text-blue-600 hover:text-blue-800 text-sm font-medium"
          >
            <i class="fas fa-edit mr-1"></i> Sửa
          </a>
          <!-- Nút xóa -->
          <form
            method="POST"
            action="/admin/chapters/<%= chapter.id %>/delete"
            onsubmit="return confirm('Bạn có chắc muốn xóa chương này không?')"
          >
            <button
              type="submit"
              class="text-red-600 hover:text-red-800 text-sm font-medium"
            >
              <i class="fas fa-trash mr-1"></i> Xóa
            </button>
          </form>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>

  <!-- Nút thêm chương mới -->
  <div class="mt-6">
    <a
      href="/admin/chapters/create?story_id=<%= story.id %>"
      class="inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700"
    >
      <i class="fas fa-plus mr-2"></i> Thêm chương mới
    </a>
  </div>
</div>
