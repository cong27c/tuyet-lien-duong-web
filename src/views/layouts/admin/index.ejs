<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="relative min-h-screen bg-gray-50 p-6">
    <% if (flashes.success) { %> <% flashes.success.forEach(msg => { %>
    <div
      class="mb-4 p-4 rounded-lg bg-green-100 text-green-800 border border-green-300"
    >
      <%= msg %>
    </div>
    <% }) %> <% } %> <% if (flashes.error) { %> <% flashes.error.forEach(msg =>
    { %>
    <div
      class="mb-4 p-4 rounded-lg bg-red-100 text-red-800 border border-red-300"
    >
      <%= msg %>
    </div>
    <% }) %> <% } %>

    <main><%- body %></main>
  </body>
</html>
